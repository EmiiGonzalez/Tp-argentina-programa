package modelo;

import lombok.Data;

@Data
public class Pronostico {
	
	Partido partido;
	String linea;
	String rondaPartido;
	Equipo equipo1; 
	Equipo equipo2; 
	Ronda rondas = new Ronda();

	
	public Pronostico() {
	}
	
	public Pronostico(String linea) {
		this.linea = linea;
	}
	
	public void generarEquipos() {
		 String nombreEquipo1 = getLinea().split(",")[1];
		 int golesEquipo1 = Integer.parseInt(getLinea().split(",")[2]);
		 String nombreEquipo2 = getLinea().split(",")[4];
		 int golesEquipo2 = Integer.parseInt(getLinea().split(",")[3]);
		 String ronda = getLinea().split(",")[0];
		 
		 this.equipo1 = new Equipo(nombreEquipo1, golesEquipo1);
		 this.equipo2 = new Equipo(nombreEquipo2, golesEquipo2);
		 this.rondaPartido = ronda;
	}
	
	public void generarPartido() {
		this.partido = new Partido(this.getEquipo1(), this.getEquipo2(), this.getrondaPartido());
	}
	
	public void generarRonda() {
		this.getRondas().setPartidos(this.getPartido());
	}
}
